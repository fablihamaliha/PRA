# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///prra.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Deal Finder APIs
# Google Custom Search API (for Google Shopping)
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CUSTOM_SEARCH_CX=your-custom-search-engine-id

# Walmart Open API
# Register at: https://developer.walmart.com/
WALMART_API_KEY=your-walmart-api-key

# Target RedCircle API (Partnership required)
# Apply at: https://partners.target.com/
TARGET_API_KEY=your-target-api-key

# Best Buy API
# Register at: https://developer.bestbuy.com/
BEST_BUY_API_KEY=your-bestbuy-api-key

# Amazon Product Advertising API
# Register at: https://affiliate-program.amazon.com/
AMAZON_API_KEY=your-amazon-api-key
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag

# OpenAI GPT API
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=INFO

# API Settings
API_RATE_LIMIT=100
MAX_RECOMMENDATIONS=3
MIN_PRODUCT_RATING=3.5

# Email Notification Settings (Dynatrace-style monitoring)
# Enable email alerts for critical app issues
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ADMIN_EMAIL=admin@example.com
FROM_EMAIL=noreply@yourapp.com

# Security Settings
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_WINDOW=60

# Admin Dashboard Security
# CRITICAL: Keep these settings in .env (never commit to GitHub)
# Set to 'true' to enable admin analytics dashboard
ENABLE_ADMIN_DASHBOARD=false
# Custom obfuscated path for admin dashboard (change this to a random UUID in production)
ADMIN_DASHBOARD_PATH=analytics
# Comma-separated list of allowed IP addresses for admin access (leave empty to allow all)
ADMIN_ALLOWED_IPS=
